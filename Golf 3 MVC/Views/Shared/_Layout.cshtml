<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Hålslaget GK</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Hålslaget GK", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="startbtn">@Html.ActionLink("Start", "Index", "Home")</li>
                    <li class="medlembtn">@Html.ActionLink("Medlem", "Medlem", "medlemmars/index")</li>
                    <li class="banornabtn">@Html.ActionLink("Banorna", "Banorna", "Home")</li>
                    <li class="klubbenbtn">@Html.ActionLink("Klubben", "Klubben", "Home")</li>
                    <li class="kontaktbtn">@Html.ActionLink("Kontakt", "Kontakt", "Home")</li>
                    <li class="kalenderbtn">@Html.ActionLink("KalenderTEST", "Index", "Calendar")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">

        @RenderBody()
        <hr />
        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="col-md-3">
                            <h4>Hålslaget GK</h4>
                            <p>
                                Golfgatan 3
                                <br />100 03 Golfstad
                            </p>
                        </div>
                        <div class="col-md-3">
                            <img class="img-responsive" src="~/Content/img/start/footermap.jpg" alt="Google Maps">
                        </div>
                        <div class="col-md-3">
                            <ul class="list-unstyled">
                                <li>070-00 00 000
                                <li><a href="mailto:index@halslagetgk.se" target="_blank">index@halslagetgk.se</a></li>
                            </ul>
                        </div>
                        <div class="col-md-3">
                            
                        </div>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-md-4">
                        <p class="muted pull-right">&copy; @DateTime.Now.Year - Hålslaget GK - Grupp 3</p>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
